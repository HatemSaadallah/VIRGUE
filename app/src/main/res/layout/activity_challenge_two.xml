<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lesson">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="372dp"
        android:layout_height="48dp"
        android:progress="40"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:id="@+id/sound"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/progressBar"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/voice" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animaux"
        android:paddingRight="100dp"
        android:layout_marginTop="30dp"
        android:layout_alignRight="@+id/sound"
        android:layout_below="@id/progressBar"
        android:textColor="#880151"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sound" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="283dp"
        android:layout_below="@id/textView5"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/sound"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">


            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/cat1" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/dog1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/horse1" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/lion" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

